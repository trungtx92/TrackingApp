<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableRow
        android:layout_height="100dp">
        <TextView
            android:id="@+id/tvTitleTracking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Title"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="27dp" />

        <EditText
            android:id="@+id/etTrackingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="16dp" />
    </TableRow>
    <TableRow
        android:layout_height="100dp">
        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center"
            android:text="Meet Point"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="87dp" />

        <Spinner
            android:id="@+id/spTrackingMeetPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="87dp" />
    </TableRow>
    <TableRow
        android:layout_height="100dp">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="Start time"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="148dp" />

        <TextView
            android:id="@+id/tvTrackingStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Time"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="208dp" />

    </TableRow>
    <TableRow
        android:layout_height="100dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="End Time"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="148dp" />

        <TextView
            android:id="@+id/tvTrackingEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="208dp" />
    </TableRow>
    <TableRow
        android:layout_height="100dp">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:text="Current Point"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="275dp" />

        <TextView
            android:id="@+id/tvTrackingCurrentPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="275dp" />
    </TableRow>
    <TableRow
        android:layout_height="100dp">
        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meeting Time"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="344dp" />

        <EditText
            android:id="@+id/etTrackingMeetingTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="05/07/2018 1:20:00 PM"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="344dp" />
    </TableRow>
    <TableRow
        android:layout_height="100dp">

        <Button
            android:id="@+id/btTrackingSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Save"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="418dp" />

        <Button
            android:id="@+id/btTrackingCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Cancel"
            tools:layout_editor_absoluteX="238dp"
            tools:layout_editor_absoluteY="418dp" />

       </TableRow>
</TableLayout>


















</android.support.constraint.ConstraintLayout>